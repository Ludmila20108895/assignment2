<!-- Form to add a new report -->
<form class="box" action="/station/{{station._id}}/addreport" method="POST">
  <label class="label is-size-5 text-is-primary">Enter Report Details:</label>

  <div class="field is-horizontal">
    <div class="field-body">

      <!-- Weather Code -->
      <div class="field">
        <label class="label">Weather Code</label>
        <div class="control">
          <input class="input" type="text" placeholder="Enter Weather Code" name="code" required>
        </div>
      </div>

      <!-- Temperature Min/Max -->
      <div class="field">
        <label class="label">Temperature (Â°C)</label>
        <div class="field has-addons">
          <p class="control">
            <input class="input" type="text" placeholder="Min Temp" name="minTemperature" required>
          </p>
          <p class="control">
            <input class="input" type="text" placeholder="Max Temp" name="maxTemperature" required>
          </p>
        </div>
      </div>

      <!-- Wind Speed Min/Max -->
      <div class="field">
        <label class="label">Wind Speed (m/s)</label>
        <div class="field has-addons">
          <p class="control">
            <input class="input" type="text" placeholder="Min Wind Speed" name="minWindSpeed" required>
          </p>
          <p class="control">
            <input class="input" type="text" placeholder="Max Wind Speed" name="maxWindSpeed" required>
          </p>
        </div>
      </div>

      <!-- Wind Direction -->
      <div class="field">
        <label class="label">Wind Direction</label>
        <div class="control">
          <div class="select">
            <select name="windDirection" required>
              <option value="">Select Wind Direction</option>
              <option value="N">North (N)</option>
              <option value="NE">Northeast (NE)</option>
              <option value="NW">Northwest (NW)</option>
              <option value="S">South (S)</option>
              <option value="SE">Southeast (SE)</option>
              <option value="SW">Southwest (SW)</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Pressure Min/Max -->
      <div class="field">
        <label class="label">Pressure (hPa)</label>
        <div class="field has-addons">
          <p class="control">
            <input class="input" type="text" placeholder="Min Pressure" name="minPressure" required>
          </p>
          <p class="control">
            <input class="input" type="text" placeholder="Max Pressure" name="maxPressure" required>
          </p>
        </div>
      </div>

    </div>
  </div>
  
  <div class="field">
    <div class="control">
      <button class="button is-primary">Submit Report</button>
    </div>
  </div>
</form>
