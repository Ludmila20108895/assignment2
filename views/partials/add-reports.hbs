<!-- Form to add a new report -->
<form class="box" action="/station/{{station._id}}/addreport" method="POST">
  <label class="label">Enter Report Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">

      <!-- Date and Time -->
      <div class="field">
        <div class="control">
          <input class="input" type="text" placeholder="Enter Date and Time" name="dateTime" required>
        </div>
      </div>

      <!-- Weather Code -->
      <div class="field">
        <div class="control">
          <input class="input" type="text" placeholder="Enter Weather Code" name="code" required>
        </div>
      </div>

      <!-- Average Temperature -->
      <div class="field">
        <div class="control">
          <input class="input" type="text" placeholder="Enter Average Temperature" name="temperature" required>
        </div>
      </div>

      <!-- Min/Max Temperature Toggle -->
      <div class="field">
        <div class="control">
          <label class="checkbox">
            <input type="checkbox" id="toggleMinMaxTemp" onchange="toggleMinMax('temperature')"> Enter Min/Max Temperature
          </label>
        </div>
      </div>

      <!-- Min/Max Temperature Inputs -->
      <div class="field min-max-temperature" style="display:none;">
        <div class="control">
          <input class="input" type="text" placeholder="Enter Minimum Temperature" name="minTemperature">
        </div>
      </div>
      <div class="field min-max-temperature" style="display:none;">
        <div class="control">
          <input class="input" type="text" placeholder="Enter Maximum Temperature" name="maxTemperature">
        </div>
      </div>

      <!-- Average Wind Speed -->
      <div class="field">
        <div class="control">
          <input class="input" type="text" placeholder="Enter Wind Speed" name="windSpeed" required>
        </div>
      </div>

      <!-- Min/Max Wind Speed Toggle -->
      <div class="field">
        <div class="control">
          <label class="checkbox">
            <input type="checkbox" id="toggleMinMaxWindSpeed" onchange="toggleMinMax('windSpeed')"> Enter Min/Max Wind Speed
          </label>
        </div>
      </div>

      <!-- Min/Max Wind Speed Inputs -->
      <div class="field min-max-windSpeed" style="display:none;">
        <div class="control">
          <input class="input" type="text" placeholder="Enter Minimum Wind Speed" name="minWindSpeed">
        </div>
      </div>
      <div class="field min-max-windSpeed" style="display:none;">
        <div class="control">
          <input class="input" type="text" placeholder="Enter Maximum Wind Speed" name="maxWindSpeed">
        </div>
      </div>

      <!-- Wind Direction -->
      <div class="field">
        <div class="control">
          <div class="select">
            <select name="windDirection" required>
              <option value="">Select Wind Direction</option>
              <option value="N">North (N)</option>
              <option value="NE">Northeast (NE)</option>
              <option value="NW">Northwest (NW)</option>
              <option value="S">South (S)</option>
              <option value="SE">Southeast (SE)</option>
              <option value="SW">Southwest (SW)</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Average Pressure -->
      <div class="field">
        <div class="control">
          <input class="input" type="text" placeholder="Enter Pressure" name="pressure" required>
        </div>
      </div>

      <!-- Min/Max Pressure Toggle -->
      <div class="field">
        <div class="control">
          <label class="checkbox">
            <input type="checkbox" id="toggleMinMaxPressure" onchange="toggleMinMax('pressure')"> Enter Min/Max Pressure
          </label>
        </div>
      </div>

      <!-- Min/Max Pressure Inputs -->
      <div class="field min-max-pressure" style="display:none;">
        <div class="control">
          <input class="input" type="text" placeholder="Enter Minimum Pressure" name="minPressure">
        </div>
      </div>
      <div class="field min-max-pressure" style="display:none;">
        <div class="control">
          <input class="input" type="text" placeholder="Enter Maximum Pressure" name="maxPressure">
        </div>
      </div>

    </div>
  </div>
  <div class="field">
    <div class="control">
      <button class="button is-primary">Submit Report</button>
    </div>
  </div>
</form>

<script>
  function toggleMinMax(type) {
    const minMaxFields = document.querySelectorAll(`.min-max-${type}`);
    minMaxFields.forEach(field => {
      field.style.display = field.style.display === 'none' ? 'block' : 'none';
    });
  }
</script>
