{{#each reports}}
<div class="container">  
  <div class="box">
    <div class="columns is-vcentered">
      <div class="column">
        <h1 class="title has-text-primary">{{this.title}}</h1>
      </div>
      <div class="column is-narrow">
        <!-- Add a delete button for each report -->
        <a href="/station/{{../station._id}}/deletereport/{{this._id}}" class="button is-danger">
          {{>icons/delete}}
        </a>
      </div>
    </div>
    <!-- Report Details -->
    <div class="columns is-multiline" style="margin-top: 10px;">
      <!-- Add other details of the report here -->
      <div class="column mr-1 has-background-primary has-text-white">
          <h2 class="is-size-5">Weather Code:</h2>
          <p>{{this.weatherCode}}</p> 
      </div>
      <!-- Add other relevant report information as needed -->
    </div>
  </div>
</div>
{{/each}}
