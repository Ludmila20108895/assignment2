<section> 
  {{> menu }}
  {{> list-reports }}

  <!-- Form to add a new report -->
  <form class="box" action="/station/{{station._id}}/addreport" method="POST">
    <label class="label">Enter Report Details:</label>
    <div class="field is-horizontal">
      <div class="field-body">
        <!-- Date and Time input -->
        <div class="field">
          <div class="control">
            <input class="input" type="text" placeholder="Enter Date and Time" name="dateTime">
          </div>
        </div>
        <!-- Weather Code input -->
        <div class="field">
          <div class="control">
            <input class="input" type="text" placeholder="Enter Weather Code" name="code">
          </div>
        </div>
        <!-- Temperature input -->
        <div class="field">
          <div class="control">
            <input class="input" type="text" placeholder="Enter Temperature" name="temperature">
          </div>
        </div>
        <!-- Wind Speed input -->
        <div class="field">
          <div class="control">
            <input class="input" type="text" placeholder="Enter Wind Speed" name="windSpeed">
          </div>
        </div>
        <!-- Wind Direction dropdown -->
        <div class="field">
          <div class="control">
            <div class="select">
              <select name="windDirection">
                <option value="">Select Wind Direction</option>
                <option value="N">North (N)</option>
                <option value="NE">Northeast (NE)</option>
                <option value="NW">Northwest (NW)</option>
                <option value="S">South (S)</option>
                <option value="SE">Southeast (SE)</option>
                <option value="SW">Southwest (SW)</option>
              </select>
            </div>
          </div>
        </div>
        <!-- Pressure input -->
        <div class="field">
          <div class="control">
            <input class="input" type="text" placeholder="Enter Pressure" name="pressure">
          </div>
        </div>
      </div>
    </div>
    <!-- Submit button -->
    <div class="field">
      <div class="control">
        <button class="button is-primary">Submit Report</button>
      </div>
    </div>
  </form>

  <!-- Reports Table Section -->
  <div class="box">
    <h2 class="title is-4">Weather Reports</h2>
    <table class="table is-fullwidth">
      <thead>
        <tr>
          <th>Date and Time</th>
          <th>Weather Code</th>
          <th>Temperature</th>
          <th>Wind Speed</th>
          <th>Wind Direction</th>
          <th>Pressure</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each reports}}
        <tr>
          <td>{{dateAndTime}}</td>
          <td>{{code}}</td>
          <td>{{temperature}}</td>
          <td>{{windSpeed}}</td>
          <td>{{windDirection}}</td>
          <td>{{pressure}}</td>
          <td>
            <a href="/station/{{../station._id}}/deletereport/{{_id}}" class="button is-danger">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
