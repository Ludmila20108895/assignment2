<section>
  {{> menu }}

  <!-- Include the list-reports partial -->
  {{> list-reports }}
  
  <section class="box has-text-centered">
    <h3 class="is-3 is-text-primary">
      Weather Readings
    </h3>
    <div class="section">
      <table class="table is-fullwidth is-hoverable">
        <thead>
          <tr>
            <th>Date and Time</th>
            <th>Weather Code</th>
            <th>Temperature</th>
            <th>Wind Speed</th>
            <th>Wind Direction</th>
            <th>Pressure</th>
          </tr>
        </thead> 
      </table>
    </div>
  </section>
  
  <!-- Form to add a new report -->
  <form class="box" action="/station/{{station._id}}/addreport" method="POST">
    <label class="label">Enter Report Details:</label>
    <div class="field is-horizontal">
      <div class="field-body">
        <!-- Location input -->
        <div class="field">
          <div class="control">
            <input class="input" type="text" placeholder="Enter Location" name="location">
          </div>
        </div>
        <!-- Code input -->
        <div class="field">
          <div class="control">
            <input class="input" type="text" placeholder="Enter Code" name="code">
          </div>
        </div>
        <!-- Temperature input -->
        <div class="field">
          <div class="control">
            <input class="input" type="text" placeholder="Enter Temperature" name="temperature">
          </div>
        </div>
        <!-- Wind direction dropdown -->
        <div class="field">
          <div class="control">
            <div class="select">
              <select name="windDirection">
                <option value="">Select Wind Direction</option>
                <option value="N">North (N)</option>
                <option value="NE">Northeast (NE)</option>
                <option value="NW">Northwest (NW)</option>
                <option value="S">South (S)</option>
                <option value="SE">Southeast (SE)</option>
                <option value="SW">Southwest (SW)</option>
              </select>
            </div>
          </div>
        </div>
        <!-- Pressure input -->
        <div class="field">
          <div class="control">
            <input class="input" type="text" placeholder="Enter Pressure" name="pressure">
          </div>
        </div>
      </div>
    </div>
    <!-- Submit button -->
    <div class="field">
      <div class="control">
        <button class="button is-primary">Submit Report</button>
      </div>
    </div>
  </form>
</section>
